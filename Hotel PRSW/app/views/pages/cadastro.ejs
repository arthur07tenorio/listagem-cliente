<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <!--metatag viewport para o Responsivo -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hotel IceTown</title>
    <link rel="stylesheet" href="css/reset.css">
    <link rel="stylesheet" href="css/estilo.css">
</head>

<body>
    <%
        var msgErro = {"nome":"","email":"","senha":"","csenha":""};
        var cssErro = {"nome":"","email":"","senha":"","csenha":""};
        
        if(listaErros) {
            listaErros.errors.forEach(function(itemErro){
                if(itemErro.path == "nome") {
                    cssErro.nome = "erro";
                    msgErro.nome = itemErro.msg;
                }
            
                if(itemErro.path == "email") {
                    cssErro.email = "erro";
                    msgErro.email = itemErro.msg;
                }

                if(itemErro.path == "senha") {
                    cssErro.senha = "erro";
                    msgErro.senha = itemErro.msg;
                }

                if(itemErro.path == "csenha") {
                    cssErro.csenha = "erro";
                    msgErro.csenha = itemErro.msg;
                }
        
            })
        }

    %>

    <div id=container>

        <!-- include header -->
<header>
                
    <div>
        <img src='imagem/logo-azul.png' alt='logo da empresa'>
        <a href="/login">
            <img src='imagem/img_login.png' alt='silhoueta de perfil de usuário'>
        </a>
    
        <nav>
            <div id="painel-menu">
                <input type="checkbox">
                <span></span>
                <span></span>
                <span></span>
                <ul>
                    <li><a href="">Acomodação</a></li>
                    <li><a href="">Lazer</a></li>
                    <li><a href="">Gastronomia</a></li>
                    <li><a href="">Reservas</a></li>
                </ul>
            </div>
        </nav>
    </div>

    
    <h1>Venha curtir férias inesquecíveis</h1>
    <img src="imagem/hotel.png" alt="imagem da fachada do Hotel">
    
</header>

<main>
    <div class="login-page">

        <div class="form-cadastro">
            <a href="/"><span id="fechar">&times;</span></a>
            <form action="cadastro" method="post"  class = "login-form">
                <h2>Cadastro</h2>
                
                <input type="text" name="nome" id="nome" placeholder = "Seu nome" value="<%= campos.nome  %>" class="<%= cssErro.nome %>">
                <span><%= msgErro.nome %></span>   
                
                <input type="text" name="email" id="email" placeholder = "Seu e-mail" value="<%= campos.email  %>" class="<%= cssErro.email %>">
                <span><%= msgErro.email %></span>   

                <input type="password" name="senha" id="senha" placeholder = "Sua senha" value="<%= campos.senha  %>" class="<%= cssErro.senha %>">
                <span><%= msgErro.senha %></span>   

                <input type="password" name="csenha" id="csenha" placeholder = "Confime a senha" value="<%= campos.csenha  %>" class="<%= cssErro.csenha %>">
                <span><%= msgErro.csenha%></span>   

                <button type="submit">Cadastrar</button>
                
                <p class="message">Já é cadastrado? <a href="/login">Entre</a></p>
            </form>
        </div>
    </div>
</main>
        <footer>
            <section>
                <img src="imagem/logo_branco.png" alt="Logo do Hotel">
                <address>
                    Valle Nevado<br>
                    Av. Viatacura 5250, Viatcura - Chile<br><br>
                    (56-2) 2477-7705<br>
                    BRA: 0800-892-0490
                </address>
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3332.659481273448!2d-70.25112108428772!3d-33.35384489994792!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x967d30a283ed6629%3A0x5f3274c5159e4972!2sValle%20Nevado!5e0!3m2!1spt-BR!2sbr!4v1615411678348!5m2!1spt-BR!2sbr" loading="lazy"></iframe>
            </section>

            <section>
                <img src="imagem/xwitter.png" alt="logo twitter">
                <img src="imagem/face.png" alt="logo facebook">
                <img src="imagem/whats.png" alt="logo whatsapp">
            </section>

        </footer>

    </div>

</body>

</html>